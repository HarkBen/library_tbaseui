<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/tbaseColortransparent_07"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_marginLeft="55dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingBottom="0.1dp"
        android:background="@drawable/tb_sp_white"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:elevation="5dp"
        android:layout_centerHorizontal="true">
        <TextView
            android:layout_width="match_parent"
            android:text="@string/tbaseFindNewVersion"
            android:padding="14dp"
            android:gravity="center"
            android:textColor="@color/tbaseTextColor"
            android:textSize="21sp"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/tbaseGray_5"
            ></View>
        <TextView
            android:id="@+id/duv_description"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:minHeight="80dp"
            android:textColor="@color/tbaseTextColor"
            tools:text="新版本能送你上火星，还不下载？@#￥%……*（）@#￥%……*（￥%…!@(*(!*(*@(*!@(*@(*!@(*@(*@!(*@(*(@*@!(*(@*(@*(*(@!*(!@*(@!*(@*(@*!(*!@(*!@(*@(*@!(!*@(@*!(*@!(*@(*@!(*@!(*@!(*@!(@!*(@!*(@!*(*@!(*@!(*!(@*(!*@(*!@(*@(@*(*@!(*!@(*!@(*@!(*@(*(!@*(@*(*(…（"
            android:layout_height="wrap_content" />
        <ProgressBar
            android:id="@+id/duv_progressbar"
            android:layout_width="match_parent"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:max="100"
            android:progressDrawable="@drawable/tb_progresss_horizontal_gray"
            tools:progress="50"
            android:visibility="gone"
            android:layout_height="10dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.4dp"
            android:background="@color/tbaseGray_5"
            ></View>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/duv_onStartDownload"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="@string/tbaseDownloading"
                android:visibility="gone"
                android:gravity="center"
                android:background="@drawable/tb_se_btn_gray_white"
                android:layout_height="45dp" />
            <Button
                android:id="@+id/duv_leftBtn"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="@string/tbaseConsiderLater"
                android:textColor="@color/tbaseTextColor"
                android:gravity="center"
                android:background="@drawable/tb_se_btn_gray_white"
                android:layout_height="45dp" />
            <View
                android:id="@+id/duv_verticalLine"
                android:layout_width="0.4dp"
                android:layout_height="45dp"
                android:background="@color/tbaseGray_5"
                ></View>
            <Button
                android:id="@+id/duv_rightBtn"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:text="@string/tbaseUpdateRightNow"
                android:textColor="@color/tbaseTextColor"
                android:gravity="center"
                android:background="@drawable/tb_se_btn_gray_white"
                android:layout_height="45dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>