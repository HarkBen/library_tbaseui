<resources>
    <style name="SwipeBackLayout">
        <item name="edge_size">50dp</item>
        <item name="shadow_left">@drawable/shadow_left</item>
        <item name="shadow_right">@drawable/shadow_right</item>
        <item name="shadow_bottom">@drawable/shadow_bottom</item>
    </style>

    <style name="update_dialogNoTitle" parent="@android:style/Animation.Dialog">
        <!-- Dialog的windowFrame框为无 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否漂现在activity上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <!-- dim:模糊的 阴影效果 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 背景图片的大小也影响窗口的大小 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_top_out</item>
        <item name="android:windowEnterAnimation">@anim/anim_slide_top_in</item>
    </style>


<style name="tbase_titleBar_side_btn">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:button">@null</item>
    <item name="android:ellipsize">end</item>
    <item name="android:gravity">center</item>
    <item name="android:maxHeight">45dp</item>
    <item name="android:maxLength">8</item>
    <item name="android:maxLines">2</item>
    <item name="android:maxWidth">50dp</item>
    <item name="android:minWidth">40dp</item>
    <item name="android:textColor">@color/tbase_titlebar_center_txt</item>
    <item name="android:textSize">12sp</item>

</style>
    <style name="tbase_titleBar_center_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:maxHeight">45dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:maxWidth">210dp</item>
        <item name="android:minWidth">40dp</item>
        <item name="android:textColor">@color/tbase_titlebar_center_txt</item>
        <item name="android:textSize">16sp</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:scrollHorizontally">true</item>
    </style>
    <style name="tbase_titleBar_rootlayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tbase_titleBarLayout_height_nostatusBar</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">@dimen/tbase_stuatusBar_height</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
    <style name="tbase_titleBar_rootlayout_nostatusBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/tbase_titleBarLayout_height_nostatusBar</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingLeft">10dp</item>
    </style>
</resources>
